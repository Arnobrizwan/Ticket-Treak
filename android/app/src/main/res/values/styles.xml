<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme applied while the app is starting -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Splash screen background -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Theme used once the app has started -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background behind Flutter UI -->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
    </style>

</resources>